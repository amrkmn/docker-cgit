#!/command/execlineb -P
# Adjust user and group IDs based on environment variables
with-contenv
/bin/sh -c "
if [ -n \"\${PUID}\" ]; then
    if [ -n \"\${PGID}\" ]; then
        /usr/sbin/groupmod -g \"\${PGID}\" git
        /usr/sbin/usermod -u \"\${PUID}\" git
    else
        /usr/sbin/usermod -u \"\${PUID}\" git
    fi
fi
"